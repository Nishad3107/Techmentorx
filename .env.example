# Database Configuration
POSTGRES_USER=ngo_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=ngo_platform
DATABASE_URL=postgresql://ngo_user:change_this_password@localhost:5432/ngo_platform

MONGO_USER=mongo_user
MONGO_PASSWORD=change_this_password
MONGODB_URI=mongodb://mongo_user:change_this_password@localhost:27017

# Redis
REDIS_URL=redis://localhost:6379

# JWT & Security
JWT_SECRET=your_jwt_secret_key_change_this
JWT_EXPIRY=24h
ENCRYPTION_KEY=your_encryption_key_32_chars

# API Keys (for external services)
PERSPECTIVE_API_KEY=your_perspective_api_key
OPENAI_API_KEY=your_openai_api_key

# Service URLs
NGO_SERVICE_URL=http://localhost:3001
CONTENT_FILTRATION_SERVICE_URL=http://localhost:8000
API_GATEWAY_URL=http://localhost:8080

# Frontend URLs
WEB_APP_URL=http://localhost:3000
MOBILE_APP_URL=http://localhost:19000

# ML Model Configuration
MODEL_PATH=./ml-models/trained
TOXICITY_THRESHOLD=0.7
MISINFORMATION_THRESHOLD=0.6

# Privacy & Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=90
ANONYMIZATION_ENABLED=true

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Cloud Storage (AWS S3 or similar)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=ngo-platform-assets
